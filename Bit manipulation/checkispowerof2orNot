class Solution {
public:
    bool isPowerOfTwo(int n) {
        // long  num = 1;
        // while(num<=n){
        // if(num == n){
        //     return true;
        // } 
        // num = num*2;
        // } 
        // return false;
        if(n<0){
           return false;
        } 
        if(n==0) return false;
        if(n==1) return true;
        if((n&(n-1))==0){
           return true;
        }
      return false;
    }
};
